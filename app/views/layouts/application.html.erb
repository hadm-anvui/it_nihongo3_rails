<!DOCTYPE html>
<html>
  <head>
    <title>Thefirstrails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= link_to('Home', root_path, method: :get)%>
    <% if user_signed_in? %>
    <br>
    Hello, <%= link_to(current_user.name, current_user) %>
    <br>
    <%= link_to('Sign out', destroy_user_session_path, method: :delete)%>
    <% else %>
    <%= link_to('Sign in', new_user_session_path, method: :get)%>
    <%= link_to('Sign up', new_user_registration_path, method: :get)%>
    <% end %>
    <hr>

    <%= yield %>
  </body>
</html>
